<% if training.favorited_by?(current_user)%>
    <%= link_to training.favorites.count, training_favorites_path(training), method: :delete, remote: true, class: "fas fa-heart favorite-color" %>
  <% else %>
    <%= link_to training.favorites.count, training_favorites_path(training), method: :post, remote: true, class: "far fa-heart favorite-color" %>
<% end %>