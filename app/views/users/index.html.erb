<div class="container-fluid">
  <div class="row">
    <div class="col-auto ml-1 mt-2">
      <h3 style="border-left: 4px solid #000;">おすすめユーザー</h3>
    </div>
  </div>
  <div class="row">
    <div class="search">
      <%= form_with model: User.new, method: :get, class: "search__form" do |f| %>
        <%= f.text_field :keyword, required: true, class: "search__form__input" %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>
  <div id="index">
      <%= render 'users/index', users: @users %>
  </div>
</div>
