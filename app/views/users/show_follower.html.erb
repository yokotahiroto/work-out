<div class="container">
  <div class="row">
    <div class="col-auto ml-1 mt-2">
      <h3 style="border-left: 4px solid #000;">フォロワー一覧</h3>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>ユーザーネーム</th>
          <th>フォロワー数</th>
          <th>フォロー数</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @user.follower_user.where.not(id: current_user.id).each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, size:'40x40', fallback: "no_photo.png", size:'40x40' %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <p>フォロワー数：<%= user.followed.count %></p>
          </td>
          <td>
            <p>フォロー数：<%= user.follower.count %></p>
          </td>
          <td>
            <%= link_to "詳細", user_path(user), class: "btn btn-outline-dark float-right" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>