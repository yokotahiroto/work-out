<div class="container">
  <div class="row">
    <div class="col-auto ml-1 mt-2">
      <h3 class="title-solid white">フォロワー一覧</h3>
    </div>
  </div>
  <div class="row">
    <table class="table">
      <tbody>
        <% @user.follower_user.where.not(id: current_user.id).each do |user| %>
        <tr>
          <td class="text-center white">
            <%= attachment_image_tag user, :profile_image, size:'40x40', fallback: "no_photo.png", size:'40x40' %>
          </td>
          <td class="text-center white">
            <%= user.name %>
          </td>
          <td class="text-center white">
            <p>フォロワー数：<%= user.followed.count %></p>
          </td>
          <td class="text-center white">
            <p>フォロー数：<%= user.follower.count %></p>
          </td>
          <td class="text-center white">
            <%= link_to "詳細", user_path(user), class: "btn btn-light" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>