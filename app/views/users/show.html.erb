<div class="container-fluid">
  <div class="row">
    <div class="col-auto ml-1 mt-2">
      <h3 style="border-left: 4px solid #000;">マイページ</h3>
    </div>
  </div>
   <!--ユーザー情報-->
  <div class="row justify-content-center">
    <div class="col-10 border">
      <div class="d-inline-block">
        <%= attachment_image_tag @user, :profile_image, size:'100x100', fallback: "no_photo.png", size:'150x150' %>
      </div>
      <table class="table d-inline-block col-9">
        <thead>
          <tr>
            <th class="px-5">フォロワー</th>
            <th class="px-5">フォロー</th>
            <th class="px-4">いいねした投稿</th>
            <th class="px-5">投稿数</th>
            <th class="px-5">合計時間</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to @user.followed.count, follower_user_path(@user) %></td>
            <td><%= link_to @user.follower.count, following_user_path(@user) %></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <div class="col-1"><%= @user.name %></div>
      <div class="offset-5 coi-5"><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-secondary" %></div>
      </div>
      <%= @user.introduction %>
    </div>

  </div>
  <div class="row mt-2">
    <div class="col-10 mx-auto">
      <% unless current_user == @user %>
        <% if current_user.following?(@user) %>
            <%= link_to 'フォロー外す', unfollow_path(@user.id), method: :POST, class: 'btn btn-info w-auto' %>
        <% else %>
            <%= link_to 'フォローする', follow_path(@user.id), method: :POST, class: 'btn btn-success w-auto' %>
        <% end %>
        <%= link_to "メッセージ", chat_path(@user),class: "btn btn-secondary w-4" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mx-auto mt-2">
      <div class="tab-area">
        <div class="tab active">
          カレンダー
        </div>
        <div class="tab">
          グラフ
        </div>
      </div>
      <div class="content-area">
        <div class="content show">
          <%= month_calendar events: @current_user.trainings do |date, trainings| %>
            <%= date.day %>
            <% trainings.each do |training| %>
            <%= link_to "詳細", training_path(training) %>
           <div>
            <% training.muscle_part.each do |part| %>
            <%= part %>
            <% end %>
           </div>
           <% end %>
          <% end %>

        </div>
        <div class="content">
          <%= line_chart @data %>
        </div>
      </div>
    </div>
  </div>
</div>
